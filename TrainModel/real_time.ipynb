# ==================== SIMPLE MODEL ARCHITECTURE (FIXED) ====================
class SimpleEyeDetectionModel(nn.Module):
    def __init__(self):
        super(SimpleEyeDetectionModel, self).__init__()
        
        # Feature Extraction - Simple CNN
        self.features = nn.Sequential(
            # Block 1
            nn.Conv2d(1, 32, 3, padding=1),
            nn.BatchNorm2d(32),
            nn.ReLU(inplace=True),
            nn.MaxPool2d(2, 2),
            nn.Dropout2d(0.1),
            
            # Block 2
            nn.Conv2d(32, 64, 3, padding=1),
            nn.BatchNorm2d(64),
            nn.ReLU(inplace=True),
            nn.MaxPool2d(2, 2),
            nn.Dropout2d(0.2),
            
            # Block 3
            nn.Conv2d(64, 128, 3, padding=1),
            nn.BatchNorm2d(128),
            nn.ReLU(inplace=True),
            nn.MaxPool2d(2, 2),
            nn.Dropout2d(0.3),
            
            # Global pooling
            nn.AdaptiveAvgPool2d((4, 4)),
        )
        
        # Classifier
        self.classifier = nn.Sequential(
            nn.Linear(128 * 4 * 4, 256),
            nn.BatchNorm1d(256),
            nn.ReLU(inplace=True),
            nn.Dropout(0.4),
            
            nn.Linear(256, 128),
            nn.ReLU(inplace=True),
            nn.Dropout(0.3),
            
            nn.Linear(128, 1),
            nn.Sigmoid()
        )
        
    def forward(self, x):
        x = self.features(x)
        x = x.view(x.size(0), -1)
        x = self.classifier(x)
        return x

# ==================== EYE DETECTION SYSTEM ====================
class RealTimeEyeDetectionSystem:
    def __init__(self):
        self.model = None
        self.load_model()
        
        # Face and eye detection
        try:
            self.face_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_frontalface_default.xml')
            self.eye_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_eye.xml')
        except:
            print("âš ï¸ Using alternative cascade paths")
            self.face_cascade = cv2.CascadeClassifier('/usr/share/opencv4/haarcascades/haarcascade_frontalface_default.xml')
            self.eye_cascade = cv2.CascadeClassifier('/usr/share/opencv4/haarcascades/haarcascade_eye.xml')
        
        # Drowsiness detection
        self.eye_close_counter = 0
        self.eye_close_threshold = 15
        self.alert_status = False
        self.eye_state_history = []
        self.history_length = 30
        
        # Webcam
        self.cap = None
        self.is_running = False
        
        print("âœ… System initialized successfully!")
    
    def load_model(self):
        """Load trained model - FIXED VERSION"""
        try:
            if not os.path.exists(MODEL_PATH):
                print(f"âŒ Model file not found: {MODEL_PATH}")
                # Try alternative path
                alt_path = '/home/gess/Documents/sub/Py/hhehee/eye_detection_model/professional_eye_detector.pth'
                if os.path.exists(alt_path):
                    MODEL_PATH = alt_path
                    print(f"âœ… Using alternative path: {MODEL_PATH}")
                else:
                    return False
            
            # Try to load with different architectures
            success = self._try_load_model()
            if success:
                accuracy = "Unknown"
                print(f"âœ… Model loaded successfully!")
                return True
            else:
                print("âŒ All model loading attempts failed")
                return False
                
        except Exception as e:
            print(f"âŒ Error loading model: {e}")
            return False
    
    def _try_load_model(self):
        """Try different methods to load model"""
        try:
            # Method 1: Load with simple architecture
            self.model = SimpleEyeDetectionModel().to(device)
            
            # Load checkpoint
            checkpoint = torch.load(MODEL_PATH, map_location=device)
            
            # Handle different checkpoint formats
            if 'model_state_dict' in checkpoint:
                state_dict = checkpoint['model_state_dict']
            else:
                state_dict = checkpoint
            
            # Load state dict with strict=False to ignore mismatches
            self.model.load_state_dict(state_dict, strict=False)
            self.model.eval()
            
            print("âœ… Model loaded with SimpleEyeDetectionModel")
            return True
            
        except Exception as e:
            print(f"âŒ Simple model loading failed: {e}")
            return False
    
    def preprocess_eye_image(self, eye_img):
        """Preprocess eye image for prediction"""
        try:
            if eye_img is None or eye_img.size == 0:
                return None
            
            # Resize
            resized = cv2.resize(eye_img, IMG_SIZE)
            
            # CLAHE for contrast enhancement
            clahe = cv2.createCLAHE(clipLimit=2.0, tileGridSize=(8,8))
            enhanced = clahe.apply(resized)
            
            # Gaussian blur
            blurred = cv2.GaussianBlur(enhanced, (3, 3), 0)
            
            # Normalize
            normalized = blurred.astype('float32') / 255.0
            
            return np.expand_dims(normalized, axis=0)  # Add channel dimension
            
        except Exception as e:
            print(f"âŒ Error preprocessing image: {e}")
            return None
    
    def predict_eye_state(self, eye_image):
        """Predict eye state (Open/Closed)"""
        if self.model is None:
            return None, 0.0
        
        try:
            # Preprocess
            processed = self.preprocess_eye_image(eye_image)
            if processed is None:
                return None, 0.0
            
            # Convert to tensor
            input_tensor = torch.tensor(processed, dtype=torch.float32).unsqueeze(0).to(device)
            
            # Prediction
            with torch.no_grad():
                output = self.model(input_tensor)
                confidence = output.item()
                prediction = 1 if confidence > 0.5 else 0
            
            return prediction, confidence
            
        except Exception as e:
            print(f"âŒ Prediction error: {e}")
            return None, 0.0
    
    def extract_eyes_from_image(self, image):
        """Extract eyes from image using face detection"""
        try:
            if image is None:
                return [], []
                
            gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
            eyes = []
            eye_positions = []
            
            # Detect faces
            faces = self.face_cascade.detectMultiScale(gray, 1.1, 4)
            
            for (x, y, w, h) in faces:
                face_roi = gray[y:y+h, x:x+w]
                
                # Detect eyes in face
                detected_eyes = self.eye_cascade.detectMultiScale(face_roi, 1.1, 4)
                
                for (ex, ey, ew, eh) in detected_eyes:
                    # Check if it's a valid eye
                    if ew >= 20 and eh >= 10:
                        eye_roi = face_roi[ey:ey+eh, ex:ex+ew]
                        eyes.append(eye_roi)
                        eye_positions.append((x+ex, y+ey, ew, eh))
            
            return eyes, eye_positions
            
        except Exception as e:
            print(f"âŒ Error extracting eyes: {e}")
            return [], []
    
    def analyze_drowsiness(self, eye_states):
        """Analyze drowsiness based on eye states"""
        if not eye_states:
            return "NO EYES DETECTED"
        
        try:
            # Calculate closed eye ratio
            closed_eyes = sum(1 for state in eye_states if state == 0)
            closed_ratio = closed_eyes / len(eye_states)
            
            # Update history
            self.eye_state_history.append(closed_ratio)
            if len(self.eye_state_history) > self.history_length:
                self.eye_state_history.pop(0)
            
            # Check drowsiness
            if len(self.eye_state_history) >= 10:
                recent_avg = np.mean(self.eye_state_history[-10:])
                if recent_avg > 0.7:  # 70% eyes closed
                    self.eye_close_counter += 1
                else:
                    self.eye_close_counter = max(0, self.eye_close_counter - 1)
            
            # Determine status
            if self.eye_close_counter >= self.eye_close_threshold:
                self.alert_status = True
                return "ğŸš¨ DROWSINESS ALERT! ğŸš¨"
            elif self.eye_close_counter > self.eye_close_threshold * 0.7:
                self.alert_status = False
                return "âš ï¸ DROWSINESS WARNING"
            else:
                self.alert_status = False
                return "âœ… AWAKE"
                
        except Exception as e:
            print(f"âŒ Drowsiness analysis error: {e}")
            return "ANALYSIS ERROR"
    
    def start_webcam(self):
        """Start webcam detection - HEADLESS VERSION (no GUI)"""
        try:
            self.cap = cv2.VideoCapture(0)
            if not self.cap.isOpened():
                print("âŒ Cannot open webcam")
                return False
            
            self.is_running = True
            print("ğŸ¥ Webcam started in HEADLESS mode")
            print("ğŸ“Š Processing frames... Press Ctrl+C to stop")
            
            frame_count = 0
            start_time = time.time()
            
            while self.is_running:
                ret, frame = self.cap.read()
                if not ret:
                    break
                
                # Process frame
                processed_frame, predictions, status = self.process_frame(frame)
                frame_count += 1
                
                # Print status every 30 frames
                if frame_count % 30 == 0:
                    elapsed = time.time() - start_time
                    fps = frame_count / elapsed
                    print(f"ğŸ“Š Frame {frame_count}, FPS: {fps:.1f}, Status: {status}")
                
                # Check for stop condition (no GUI, so use counter)
                if frame_count > 1000:  # Stop after 1000 frames for demo
                    print("ğŸ›‘ Demo completed - 1000 frames processed")
                    break
                    
                # Small delay to prevent high CPU usage
                time.sleep(0.01)
            
            self.stop_webcam()
            return True
            
        except KeyboardInterrupt:
            print("\nğŸ›‘ Stopped by user")
            self.stop_webcam()
            return True
        except Exception as e:
            print(f"âŒ Webcam error: {e}")
            self.stop_webcam()
            return False
    
    def process_frame(self, frame):
        """Process a single frame for eye detection"""
        try:
            # Flip frame for mirror effect
            frame = cv2.flip(frame, 1)
            
            # Extract eyes
            eyes, eye_positions = self.extract_eyes_from_image(frame)
            
            eye_states = []
            predictions_info = []
            
            # Predict each eye
            for i, (eye_img, (ex, ey, ew, eh)) in enumerate(zip(eyes, eye_positions)):
                prediction, confidence = self.predict_eye_state(eye_img)
                
                if prediction is not None:
                    state = "OPEN" if prediction == 1 else "CLOSED"
                    confidence_display = confidence if prediction == 1 else 1 - confidence
                    
                    eye_states.append(prediction)
                    predictions_info.append((state, confidence_display, (ex, ey, ew, eh)))
            
            # Analyze drowsiness
            drowsiness_status = self.analyze_drowsiness(eye_states)
            
            return frame, predictions_info, drowsiness_status
            
        except Exception as e:
            print(f"âŒ Frame processing error: {e}")
            return frame, [], "PROCESSING ERROR"
    
    def stop_webcam(self):
        """Stop webcam"""
        self.is_running = False
        if self.cap:
            self.cap.release()
        print("ğŸ›‘ Webcam stopped")
    
    def predict_single_image(self, image_path):
        """Predict eye state for a single image"""
        try:
            if not os.path.exists(image_path):
                return None, 0.0, "Image not found"
            
            # Load image
            image = cv2.imread(image_path)
            if image is None:
                return None, 0.0, "Cannot load image"
            
            # Extract eyes
            eyes, positions = self.extract_eyes_from_image(image)
            
            if not eyes:
                return None, 0.0, "No eyes detected"
            
            # Predict all eyes and take majority vote
            predictions = []
            confidences = []
            
            for eye_img in eyes:
                prediction, confidence = self.predict_eye_state(eye_img)
                if prediction is not None:
                    predictions.append(prediction)
                    confidences.append(confidence)
            
            if not predictions:
                return None, 0.0, "All predictions failed"
            
            # Majority vote
            final_prediction = 1 if sum(predictions) > len(predictions) / 2 else 0
            avg_confidence = np.mean(confidences)
            
            state = "OPEN" if final_prediction == 1 else "CLOSED"
            confidence_display = avg_confidence if final_prediction == 1 else 1 - avg_confidence
            
            return state, confidence_display, f"Detected {len(eyes)} eyes, {sum(predictions)} open, {len(predictions)-sum(predictions)} closed"
                
        except Exception as e:
            return None, 0.0, f"Error: {str(e)}"
    
    def predict_from_url(self, image_url):
        """Predict eye state from image URL"""
        try:
            # Download image
            response = requests.get(image_url, timeout=10)
            response.raise_for_status()
            
            # Convert to OpenCV format
            image_array = np.frombuffer(response.content, np.uint8)
            image = cv2.imdecode(image_array, cv2.IMREAD_COLOR)
            
            if image is None:
                return None, 0.0, "Cannot decode image from URL"
            
            # Extract eyes
            eyes, positions = self.extract_eyes_from_image(image)
            
            if not eyes:
                return None, 0.0, "No eyes detected"
            
            # Predict all eyes
            predictions = []
            confidences = []
            
            for eye_img in eyes:
                prediction, confidence = self.predict_eye_state(eye_img)
                if prediction is not None:
                    predictions.append(prediction)
                    confidences.append(confidence)
            
            if not predictions:
                return None, 0.0, "All predictions failed"
            
            # Majority vote
            final_prediction = 1 if sum(predictions) > len(predictions) / 2 else 0
            avg_confidence = np.mean(confidences)
            
            state = "OPEN" if final_prediction == 1 else "CLOSED"
            confidence_display = avg_confidence if final_prediction == 1 else 1 - avg_confidence
            
            return state, confidence_display, f"Detected {len(eyes)} eyes"
                
        except Exception as e:
            return None, 0.0, f"Error: {str(e)}"

